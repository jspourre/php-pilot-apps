{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ user.website }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <h2>User's posts</h2>
    {% for post in user.posts %}
        <h4>{{ post.title }} #{{ post.id }}</h3>
        <p>{{ post.body }}<p>
        {{ include('users/_delete_posts.html.twig') }}
        <hr>
    {% endfor %}
    <a href="{{ path('users_index') }}">back to list</a>

{% endblock %}
